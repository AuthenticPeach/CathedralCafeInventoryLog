<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- A header style for your stock‐category titles -->
    <style name="StockSectionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@color/surfaceColor</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- A default item title style -->
    <style name="StockItemTitle">
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>

